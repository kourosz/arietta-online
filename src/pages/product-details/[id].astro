---
import ProductVariant from "../../components/ProductVariant";
import type { Product } from "../../entities";
import Layout from "../../layouts/Layout.astro";

// export function getStaticPaths() {
//   return allProducts.map((p) => {
//     return {
//       params: { id: p.id },
//     };
//   });
// }

const { id } = Astro.params;
let product: Product | null = null;
if (id) {
  const response = await fetch(import.meta.env.HOST_URL+"/data/products.json");
  const allProducts = await response.json() as Product[];

  const products = allProducts.filter(
    (p: Product) => p.id == id
  );
  if (products.length) {
    product = products[0];
  }
}
---

<Layout title="Arietta Shop">
  <main>
    <div class="text-sm breadcrumbs">
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href={`/products/${product?.productType}`}>Products</a></li>
        <li>{product && product.name}</li>
      </ul>
    </div>

    {
      product && (
        <div class="hero min-h-screen bg-base-200">
          <div class="hero-content flex-col">
            <h2 class="text-5xl font-bold">
              {product.company} - {product.name}
            </h2>
            <div class="flex w-full">
              <img
                src={`/images/${product.images[0]}`}
                class="max-w-sm rounded-lg shadow-2xl"
              />
              <div class="pl-4 pb-4">
                <ProductVariant product={product} client:load />
              </div>
            </div>
            <div>
              <p class="py-6">{product.description}</p>
            </div>
          </div>
        </div>
      )
    }
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 0.1rem;
    max-width: 120ch;
  }
</style>
